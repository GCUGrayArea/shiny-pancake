    "@react-navigation/native-stack": "^7.3.28",
    "expo": "~54.0.15",
    "expo-device": "^8.0.9",
    "expo-image-manipulator": "^14.0.7",
    "expo-image-picker": "^17.0.8",
    "expo-notifications": "^0.32.12",
    "expo-secure-store": "^15.0.7",
    "expo-sqlite": "^16.0.8",
    "expo-status-bar": "~3.0.8",
    "firebase": "^12.4.0",
    "openai": "^6.6.0",
    "react": "19.1.0",
