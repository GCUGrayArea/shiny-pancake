# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id

# Firebase Emulators
# Set to 'true' to use local Firebase emulators for development
# Set to 'false' or leave empty to use production Firebase
USE_FIREBASE_EMULATORS=false

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# OpenAI Model Configuration (optional)
# Default: gpt-4-turbo
# Options: gpt-4-turbo, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4-turbo

# OpenAI Request Configuration (optional)
# Maximum tokens in AI responses (default: 1000)
OPENAI_MAX_TOKENS=1000

# Temperature for AI responses, 0-2 (default: 0.7)
# Lower = more focused/deterministic, Higher = more creative/random
OPENAI_TEMPERATURE=0.7

# Request timeout in milliseconds (default: 30000 = 30 seconds)
OPENAI_TIMEOUT=30000
